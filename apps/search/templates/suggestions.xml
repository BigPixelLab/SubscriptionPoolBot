<message-set>
    <message if="show">
        <h1> {service.name} </h1>
        <br/>
        <p> {service.description} </p>

        <inline-keyboard>
            <kr for="sub_plan" in="sub_plans">
                <button callback_data="buy:{sub_plan.id}">
                    {sub_plan.name} — {sub_plan.monthly_price}₽/мес
                    <x if="sub_plan.discount is not None"> ( скидка {sub_plan.discount}% ) </x>
                </button>
            </kr>
        </inline-keyboard>
    </message>

    <message if="not show">
        Мы пока не работаем с этим сервисом
    </message>
</message-set>